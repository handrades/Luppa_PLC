{
  "name": "@luppa/api",
  "version": "1.0.0",
  "description": "Backend API server for PLC Inventory Management System",
  "private": true,
  "type": "module",
  "main": "dist/server.js",
  "scripts": {
    "dev": "tsx watch src/server.ts",
    "build": "tsc",
    "start": "node dist/server.js",
    "test": "jest",
    "test:watch": "jest --watch",
