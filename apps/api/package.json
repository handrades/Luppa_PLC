{
  "name": "@luppa/api",
  "version": "1.0.0",
  "description": "Backend API server for PLC Inventory Management System",
  "type": "commonjs",
  "private": true,
  "main": "dist/server.js",
  "scripts": {
    "dev": "nodemon --exec ts-node src/server.ts",
    "build": "tsc",
    "start": "node dist/server.js",
    "test": "jest",
    "test:coverage": "jest --coverage",
    "test:watch": "jest --watch",
    "type-check": "tsc --noEmit",
    "lint": "eslint src --ext .ts,.js",
    "lint:fix": "eslint src --ext .ts,.js --fix",
    "migration:generate": "typeorm-ts-node-commonjs migration:generate -d src/config/typeorm.config.ts",
    "migration:run": "typeorm-ts-node-commonjs migration:run -d src/config/typeorm.config.ts",
    "migration:revert": "typeorm-ts-node-commonjs migration:revert -d src/config/typeorm.config.ts",
    "migration:show": "typeorm-ts-node-commonjs migration:show -d src/config/typeorm.config.ts",
    "seed": "tsx src/database/seeds/index.ts",
    "seed:roles": "tsx -e \"import('./src/database/seeds/index.js').then(m => m.runRolesOnly())\"",
    "seed:users": "tsx -e \"import('./src/database/seeds/index.js').then(m => m.runUsersOnly())\"",
    "backup:db": "pwsh ../../infrastructure/scripts/backup-db.ps1",
    "backup:db:schema": "pwsh ../../infrastructure/scripts/backup-db.ps1 -BackupType schema",
    "backup:db:full": "pwsh ../../infrastructure/scripts/backup-db.ps1 -BackupType full",
    "backup:db:uncompressed": "pwsh ../../infrastructure/scripts/backup-db.ps1 -Compress:$false",
    "restore:db": "pwsh ../../infrastructure/scripts/restore-db.ps1",
    "restore:db:create": "pwsh ../../infrastructure/scripts/restore-db.ps1 -CreateDatabase",
    "restore:db:replace": "pwsh ../../infrastructure/scripts/restore-db.ps1 -CreateDatabase -DropExisting"
  },
  "dependencies": {
    "@types/bull": "^4.10.4",
    "@types/multer": "^2.0.0",
    "bcrypt": "^6.0.0",
    "bull": "^4.16.5",
    "compression": "^1.7.4",
    "cors": "^2.8.5",
    "csv-parse": "^6.1.0",
    "csv-stringify": "^6.6.0",
    "dotenv": "^17.2.1",
    "express": "^4.19.0",
    "express-rate-limit": "^8.0.1",
    "helmet": "^8.1.0",
    "joi": "^18.0.0",
    "jsonwebtoken": "^9.0.2",
    "multer": "^2.0.2",
    "pg": "^8.13.0",
    "prom-client": "^15.1.3",
    "redis": "^5.8.0",
    "reflect-metadata": "^0.2.2",
    "swagger-jsdoc": "^6.2.8",
    "swagger-ui-express": "^5.0.1",
    "typeorm": "^0.3.26",
    "uuid": "^11.1.0",
    "winston": "^3.17.0",
    "winston-daily-rotate-file": "^5.0.0"
  },
  "devDependencies": {
    "@types/bcrypt": "^6.0.0",
    "@types/better-sqlite3": "^7.6.13",
    "@types/compression": "^1.7.5",
    "@types/cors": "^2.8.17",
    "@types/express": "^4.17.21",
    "@types/jest": "^29.5.14",
    "@types/jsonwebtoken": "^9.0.10",
    "@types/node": "^24.2.0",
    "@types/pg": "^8.11.0",
    "@types/supertest": "^6.0.2",
    "@types/swagger-jsdoc": "^6.0.4",
    "@types/swagger-ui-express": "^4.1.8",
    "@types/uuid": "^10.0.0",
    "better-sqlite3": "^11.10.0",
    "jest": "^30.0.0",
    "nodemon": "^3.1.0",
    "supertest": "^7.0.0",
    "ts-jest": "^29.4.1",
    "ts-node": "^10.9.2",
    "tsx": "^4.19.2",
    "typescript": "~5.5.4"
  },
  "engines": {
    "node": ">=20.0.0",
    "pnpm": ">=9.0.0"
  }
}
