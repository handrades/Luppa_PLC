{
  "watch": ["src", ".env"],
  "ext": "ts,js,json",
  "ignore": ["**/*.test.ts", "**/*.spec.ts", "dist/**/*", "node_modules/**/*", "logs/**/*", "__tests__/**/*"],
  "exec": "ts-node src/server.ts",
  "env": {
    "NODE_ENV": "development",
    "PORT": "3101"
  },
  "restartable": "rs",
  "colours": true,
  "legacyWatch": false,
  "delay": 500
}
